<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/data"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:onClick="click_data"
        android:scaleType="fitCenter"
        android:src="@drawable/data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <ImageButton
        android:id="@+id/import_sign"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:onClick="click_import"
        android:scaleType="fitCenter"
        android:src="@drawable/spending"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Better Budget"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="216dp"
        android:layout_height="99dp"
        android:text="(summary function to be implemented)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Switch
        android:id="@+id/danger_zone_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/danger_zone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summary" />

    <TextView
        android:id="@+id/danger_switch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danger zone function: off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/danger_zone_switch"
        app:layout_constraintVertical_bias="0.01" />

    <ImageButton
        android:id="@+id/danger_zone"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:onClick="click_danger"
        android:scaleType="fitCenter"
        android:src="@drawable/danger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/analysis"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:onClick="click_analysis"
        android:scaleType="fitCenter"
        android:src="@drawable/analysis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/danger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danger Zones"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/danger_zone"
        app:layout_constraintRight_toRightOf="@id/danger_zone"
        app:layout_constraintTop_toBottomOf="@id/danger_zone" />

    <TextView
        android:id="@+id/import_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Spending"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/import_sign"
        app:layout_constraintRight_toRightOf="@id/import_sign"
        app:layout_constraintTop_toBottomOf="@id/import_sign" />
    <TextView
    android:id="@+id/analysis_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Analysis"
    android:textSize="12sp"
    app:layout_constraintLeft_toLeftOf="@id/analysis"
    app:layout_constraintRight_toRightOf="@id/analysis"
    app:layout_constraintTop_toBottomOf="@id/analysis" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Management"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/data"
        app:layout_constraintRight_toRightOf="@id/data"
        app:layout_constraintTop_toBottomOf="@id/data" />

</androidx.constraintlayout.widget.ConstraintLayout>