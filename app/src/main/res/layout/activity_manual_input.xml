<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manual_input">

    <EditText
        android:id="@+id/data_entry_manual_year"
        android:layout_width="37dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <EditText
        android:id="@+id/data_entry_manual_month"
        android:layout_width="37dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Month"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/date_pmt"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:text="Date"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/data_entry_manual_seller"
        app:layout_constraintLeft_toLeftOf="@id/data_entry_manual_day"
        app:layout_constraintRight_toRightOf="@id/data_entry_manual_day"
        app:layout_constraintTop_toBottomOf="@id/text_manual_input" />

    <TextView
        android:id="@+id/seller_pmt"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:text="Seller"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/data_entry_manual_seller"
        app:layout_constraintLeft_toLeftOf="@id/data_entry_manual_seller"
        app:layout_constraintRight_toRightOf="@id/data_entry_manual_seller"
        app:layout_constraintTop_toBottomOf="@id/text_manual_input" />

    <EditText
        android:id="@+id/data_entry_manual_day"
        android:layout_width="37dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Day"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <EditText
        android:id="@+id/data_entry_manual_seller"
        android:layout_width="78dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Seller"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/back_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="back_manual"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_entry_manual_cost"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/finish_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="finish_manual"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_entry_manual_cost"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/text_manual_input"
        android:layout_width="313dp"
        android:layout_height="234dp"
        android:text="Please enter one spending each time. Click on “Submit” after you finish recording and you will be able to enter a new entry. "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/data_entry_manual_cost"
        android:layout_width="78dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Cost"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/manual_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submit_manual"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_entry_manual_cost"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/cost_pmt"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:text="Cost"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/data_entry_manual_cost"
        app:layout_constraintLeft_toLeftOf="@id/data_entry_manual_cost"
        app:layout_constraintRight_toRightOf="@id/data_entry_manual_cost"
        app:layout_constraintTop_toBottomOf="@id/text_manual_input" />
</androidx.constraintlayout.widget.ConstraintLayout>